{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["es2015", "es2017", "es6", "es7", "dom"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
